<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TabTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">18sp</item>
        <item name="chipBackgroundColor">@color/chip_bg_color</item>
        <item name="android:textColor">@color/chip_text_color_round</item>
    </style>

    <style name = "BottomSheetDialogTheme" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name = "BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>